@model IEnumerable<RISTORANTIS.Models.Administrador>

@{
    ViewData["Title"] = "VerAdministradores";
}

<h1 class="text-center"> Admnistradores Criados</h1>

<link href="~/StyleSheetGeral.css" rel="stylesheet" />

<div>
	<a asp-action="Clientes" style="color:black"> + Novo Administrador </a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.IdCriadorNavigation)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.IdCriadorNavigation.Email)
                    </td>
                </tr>
          }
    </tbody>
</table>
<div>
	<a asp-action="Painel" style="color:black">Voltar ao Menu</a>
</div>