@model RISTORANTIS.Models.PedirRegisto

@{
    ViewData["Title"] = "AceitarPedidos";
}

<head>
    <style>
        .button {
            background-color: #F5DEB3;
            border-color: #000000;
            color: #000000;
            padding: 5px 20px;
            text-align: center;
            display: compact;
            font-size: 15px;
        }
    </style>
</head>

<h1>Aceitar Pedido de Registo</h1>


<link href="~/StyleSheetGeral.css" rel="stylesheet" />

@*<h4>PedirRegisto</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AceitarPedidos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedirRegisto" />
            <div class="form-group">
                <label asp-for="DataPedido" class="control-label">Data do pedido: </label>
                @*<input asp-for="DataPedido" class="form-control" />
                    <span asp-validation-for="DataPedido" class="text-danger"></span>*@
                @{
                    //string data = @Model.DataPedido.ToString("dd/MM/yyyy HH:mm");
                    string data = @Model.DataPedido.ToString("dd/MM/yyyy");
                }
                @data
            </div>
            <div class="form-group" hidden>
                <label asp-for="DataAceitacao" class="control-label"> Data de Aceitação</label>
                <input asp-for="DataAceitacao" class="form-control" value=@DateTime.Now />
                <span asp-validation-for="DataAceitacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"> Resultado: </label>
                @*<input asp-for="Resultado" class="form-control" value="Aceite" />
                <span asp-validation-for="Resultado" class="text-danger"></span>*@
                @{ 
					string resultado = "Aceite";
                }
                @resultado
            </div>
            <div class="form-group" hidden>
                <label asp-for="MotivoRejeicao" class="control-label"> Motivo de Rejeição </label>
                <textarea asp-for="MotivoRejeicao" class="form-control" rows="5" cols="5"> </textarea>/>
                <span asp-validation-for="MotivoRejeicao" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdRestaurante" class="control-label"></label>
                <select asp-for="IdRestaurante" class="form-control" asp-items="ViewBag.IdRestaurante"></select>
                <span asp-validation-for="IdRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdAdministrador" class="control-label"></label>
                <select asp-for="IdAdministrador" class="form-control" asp-items="ViewBag.IdAdministrador"></select>
                <span asp-validation-for="IdAdministrador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aceitar Pedido" class="btn btn-primary: button" /> <a asp-action="PedidosRestaurante" style="color:black"> Voltar </a>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="PedidosRestaurante" style="color:black"> Voltar </a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
