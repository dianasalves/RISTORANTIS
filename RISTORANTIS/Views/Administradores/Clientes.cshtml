@model IEnumerable<RISTORANTIS.Models.Utilizador>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="text-center">Clientes</h1>

<link href="~/StyleSheetGeral.css" rel="stylesheet" />

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.IdUtilizador">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdUtilizador">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUtilizador">Delete</a>*@
                @if(item.Estado == "Registado")
				{
                    <a asp-action="RegistarAdministrador" asp-route-id="@item.IdUtilizador" style="color:black"> Adicionar Administrador </a>
				}
            </td>
        </tr>
}
    </tbody>
</table>
