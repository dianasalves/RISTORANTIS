@model IEnumerable<RISTORANTIS.Models.Utilizador>
@{
    ViewData["Title"] = "PageInicial";
}

<head>
    <style>
        .button {
            background-color: #F5DEB3;
            border-color: #000000;
            color: #000000;
            padding: 5px 15px;
            text-align: center;
            display: compact;
            font-size: 15px;
        }
    </style>
</head>

<link href="~/StyleSheetGeral.css" rel="stylesheet" />

<h1>Restaurantes</h1>
<div class="text-center">
    @*<h1 class="display-4">Bem-Vindo @Context.Session.GetString("user")</h1>*@
    @*<h1 class="display-4">Bem-Vindo </h1>*@
</div>

<form asp-action="Pesquisa" method="get">
    <p>
        <input type="text" name="SearchString" />
        <button style="border:none" type="submit"><img src="~/Icon/download.png" height="15" width="15" /></button>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurante.Fotografia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    
                    @{
                        var imagem = String.Format("data:image/gif;base64,{0}", @item.Restaurante.Fotografia);
                    }

                    <img src="@imagem" height="75" width: auto />
                    @*<img src="@item.Restaurante.Fotografia" height="50" width="100" />*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a asp-action="SelecionarFavoritoR">
                        <img id="imagem_fav" height="20" width="20" src="~/Icon/favourite_no.png" />
                    </a>
                </td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@item.IdUtilizador" style="color:peru" >Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

