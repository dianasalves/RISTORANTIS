@model RISTORANTIS.Models.Restaurante

@{
	ViewData["Title"] = "Detalhes";
}

<head>
    <style>
        .button {
            background-color: #F5DEB3;
            border-color: #000000;
            color: #000000;
            padding: 5px 15px;
            text-align: center;
            display: compact;
            font-size: 15px;
        }
    </style>
</head>

<h1>Detalhes</h1>

<link href="~/StyleSheetGeral.css" rel="stylesheet" />

<div>
	<h4>Restaurante</h4>
	<hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class="col-sm-10">
            @{
                var imagem = String.Format("data:image/gif;base64,{0}", Model.Fotografia);
            }
            <img src="@imagem" height="50" width="90" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalizacaoGps)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalizacaoGps)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCodigoPostal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCodigoPostal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoMorada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoMorada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoLocalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoLocalidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Horario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaDescanso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaDescanso)
        </dd>
        <dt hidden class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdRestauranteNavigation)
        </dt>
        <dd hidden class="col-sm-10">
            @Html.DisplayFor(model => model.IdRestauranteNavigation.Email)
        </dd>
    </dl>
</div>
<div>
	<a asp-action="PratoDoDia" asp-route-id="@Model.IdRestaurante" class="btn btn-primary; button">Pratos do Dia</a> <label> |  </label>
	<a asp-action="Servicos" asp-route-id="@Model.IdRestaurante" class="btn btn-primary; button"> Tipos de Serviço </a> <label> |  </label>
	<a asp-action="PageInicial" style="color:black">Voltar ao Início</a> 
</div>
