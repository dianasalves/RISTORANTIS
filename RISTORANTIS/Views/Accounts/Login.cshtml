@model RISTORANTIS.Models.Utilizador

@{
    ViewData["Title"] = "Login";
}

<head>
    <style>
        .button {
            background-color: #F5DEB3;
            border-color: #000000;
            color: #000000;
            padding: 5px 20px;
            text-align: center;
            display: compact;
            font-size: 15px;
        }
    </style>
</head>

<div class="text-center">
    <h1>Login</h1>
</div>

<link href="~/StyleSheet.css" rel="stylesheet"/>
@*<h4>Inserir os dados</h4>*@


	<section>
		<form asp-action="Login">
			<div asp-validation-summary="ModelOnly" class="text-center"></div>
			<div class="form-group">
				<label asp-for="Username" class="control-label"></label>
				<input asp-for="Username" class="form-control" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Login" class="button" /> <a asp-action="Registar" style="color:black">Registar Conta</a>
			</div>
		</form>
	</section>

	


@*<div>
    <a asp-action="Registar" style="color:black">Registar Conta</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
