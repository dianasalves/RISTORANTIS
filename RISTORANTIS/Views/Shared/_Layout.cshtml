<!DOCTYPE html>
<html lang="pt">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>RISTORANTIS</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	@*<link rel="stylesheet" href="~/Proibido.css"/>*@
	
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				@if (Context.Session.GetString("client") != null)
				{
					<a class="navbar-brand" asp-area="" asp-controller="Clientes" asp-action="Painel"> <img src="~/Imagens/ristorantis.jpg" height="70" width="150" /> </a>
				}
				else if (Context.Session.GetString("rest") != null)
				{
					<a class="navbar-brand" asp-area="" asp-controller="Restaurante" asp-action="Painel"> <img src="~/Imagens/ristorantis.jpg" height="70" width="150" /> </a>
				}
				else if (Context.Session.GetString("admin") != null)
				{
					<a class="navbar-brand" asp-area="" asp-controller="Administradores" asp-action="Painel"> <img src="~/Imagens/ristorantis.jpg" height="70" width="150" /> </a>
				}
				else
				{
					<a class="navbar-brand" asp-area="" asp-controller="Visitante" asp-action="PageInicial"> <img src="~/Imagens/ristorantis.jpg" height="70" width="150" /> </a>
				}
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<ul class="navbar-nav flex-grow-1">

						@if (Context.Session.GetString("client") != null || Context.Session.GetString("admin") != null || Context.Session.GetString("rest") != null)
						{
							<li class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
								<a style="display:none" class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Login">Login</a>
							</li>
							<li class="flex-grow-0">
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Painel"> <img src="~/Icon/casa.png" /> </a>
							</li>
							<li class="flex-grow-0">
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Logout">Logout</a>
							</li>
						}
						else
						{
							<li class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Login">Login</a>
							</li>
							<li class="flex-grow-0" hidden>
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Logout">Logout</a>
							</li>
							<li class="flex-grow-0">
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Registar">Registar</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - RISTORANTIS - Laboratório
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
